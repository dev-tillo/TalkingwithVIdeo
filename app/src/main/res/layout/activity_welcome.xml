<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_simple" />

    <ImageView
        android:id="@+id/stranger"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Random video Calling"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="@id/stranger"
        app:layout_constraintRight_toRightOf="@id/stranger"
        app:layout_constraintTop_toBottomOf="@id/stranger" />

    <TextView
        android:id="@+id/randomtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="Talk with Random people\nfrom all around the globe\n Make a new friends and have fun!"
        android:textColor="#A4FFFFFF"
        app:layout_constraintLeft_toLeftOf="@id/random"
        app:layout_constraintRight_toRightOf="@id/random"
        app:layout_constraintTop_toBottomOf="@id/random" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/green"
        android:paddingHorizontal="60dp"
        android:text="Get Started"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:iconTint="@color/green"
        app:layout_constraintLeft_toLeftOf="@id/randomtext"
        app:layout_constraintRight_toRightOf="@id/randomtext"
        app:layout_constraintTop_toBottomOf="@id/randomtext" />

</androidx.constraintlayout.widget.ConstraintLayout>