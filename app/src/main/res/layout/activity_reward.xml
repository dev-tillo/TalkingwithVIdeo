<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RewardActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_blur" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_width="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:text="WALLET"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageView7">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_height="32dp"
            android:layout_width="32dp"
            app:srcCompat="@drawable/ic_coin" />

        <TextView
            android:fontFamily="@font/roboto_bold"
            android:id="@+id/coins"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </LinearLayout>

    <TextView
        android:fontFamily="@font/roboto_light"
        android:id="@+id/textView10"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:text="Your Coins"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:background="@drawable/reward_bg"
        android:gravity="center"
        android:id="@+id/video1"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <ImageView
            android:layout_height="24dp"
            android:layout_width="24dp"
            app:srcCompat="@drawable/ic_coin" />

        <TextView
            android:fontFamily="@font/roboto_bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="200 Coins"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/video1Icon"
            android:layout_height="24dp"
            android:layout_width="24dp"
            app:srcCompat="@drawable/youtube" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/reward_bg"
        android:gravity="center"
        android:id="@+id/video2"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video1">

        <ImageView
            android:layout_height="24dp"
            android:layout_width="24dp"
            app:srcCompat="@drawable/ic_coin" />

        <TextView
            android:fontFamily="@font/roboto_bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="300 Coins"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_height="24dp"
            android:layout_width="24dp"
            app:srcCompat="@drawable/youtube" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/reward_bg"
        android:gravity="center"
        android:id="@+id/video3"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video2">

        <ImageView
            android:layout_height="24dp"
            android:layout_width="24dp"
            app:srcCompat="@drawable/ic_coin" />

        <TextView
            android:fontFamily="@font/roboto_bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="400 Coins"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_height="24dp"
            android:layout_width="24dp"
            app:srcCompat="@drawable/youtube" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/reward_bg"
        android:gravity="center"
        android:id="@+id/video4"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video3">

        <ImageView
            android:layout_height="24dp"
            android:layout_width="24dp"
            app:srcCompat="@drawable/ic_coin" />

        <TextView
            android:fontFamily="@font/roboto_bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="500 Coins"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_height="24dp"
            android:layout_width="24dp"
            app:srcCompat="@drawable/youtube" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/reward_bg"
        android:gravity="center"
        android:id="@+id/video5"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video4">

        <ImageView
            android:layout_height="24dp"
            android:layout_width="24dp"
            app:srcCompat="@drawable/ic_coin" />

        <TextView
            android:fontFamily="@font/roboto_bold"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="1000 Coins"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_height="24dp"
            android:layout_width="24dp"
            app:srcCompat="@drawable/youtube" />
    </LinearLayout>

    <TextView
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:id="@+id/textView12"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_width="0dp"
        android:text="In order to match with random people and make friends, watch videos to get coins."
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />
</androidx.constraintlayout.widget.ConstraintLayout>